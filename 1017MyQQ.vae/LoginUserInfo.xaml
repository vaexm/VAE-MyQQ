                <Label Canvas.Left="19" Canvas.Top="66" Content="姓名" Background="AliceBlue" Height="28" Name="label10" />
                <Label Canvas.Left="19" Canvas.Top="100" Content="年龄" Background="AliceBlue" Height="28" Name="label11" />
