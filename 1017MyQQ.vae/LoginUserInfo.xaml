        <!--<Border BorderBrush="Silver"   CornerRadius="15" BorderThickness="1" Canvas.Left="12" Canvas.Top="12" Height="341" Name="border1" Width="200">
            
        </Border>-->
        <WrapPanel Name="wp" Margin="270,0">
        <GroupBox Canvas.Left="270" Canvas.Top="12" Header="基本资料" Height="377" Name="groupBox1" Width="206">
            <Canvas >
