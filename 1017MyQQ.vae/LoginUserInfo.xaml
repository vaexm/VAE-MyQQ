                <TextBox Canvas.Left="64" Canvas.Top="50" Height="23" Name="txtPwd" LostFocus="txtPwd_LostFocus"  Width="120" />
                <PasswordBox Canvas.Left="64" Canvas.Top="85" Height="23" Name="pasPwd"  Width="120" />
                <PasswordBox Canvas.Left="64" Canvas.Top="124" Height="23" Name="pasPwd1" LostFocus="pasPwd1_LostFocus" Width="120" />
