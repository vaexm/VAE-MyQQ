                <Label Canvas.Left="6" Canvas.Top="8" Background="AliceBlue" Content="密码修改" Height="28" Name="label3" Width="176" />
                <Label Canvas.Left="10" Canvas.Top="48" Content="原密码" Background="AliceBlue" Height="28" Name="label4" />
                <Label Canvas.Left="10" Canvas.Top="86" Content="新密码" Background="AliceBlue" Height="28" Name="label5" />
