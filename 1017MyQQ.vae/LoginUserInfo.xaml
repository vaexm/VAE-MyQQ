        <Button Canvas.Left="217" Canvas.Top="366" Content="确定" Height="23" Name="button1" Click="button1_Click" Width="75" />
        <Button Canvas.Left="320" Canvas.Top="366" Content="取消" Height="23" Name="button2" Click="button2_Click" Width="75" />
        <Image Panel.ZIndex="-5" Source="images/play/proxy.jpg" Canvas.Left="10" Canvas.Top="10" Height="408" Name="image2" Stretch="Fill" Width="567" />
        <Label Canvas.Left="46" Canvas.Top="235" Content="修改头像" MouseLeftButtonDown="label14_MouseLeftButtonDown" MouseEnter="label14_MouseEnter" MouseLeave="label14_MouseLeave" Height="28" Name="label14" Width="67" />
