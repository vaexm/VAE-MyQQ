                <ComboBox Canvas.Left="74" Canvas.Top="204" Height="23" Name="cobblood" Width="120" />
                <ComboBox Canvas.Left="74" Canvas.Top="263" Height="23" Name="cobstar" Width="120" />
                <TextBox Canvas.Left="74" Canvas.Top="71" Height="23" Name="txtName" Width="120" />
